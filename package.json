{
  "name": "rememberthetask-api",
  "version": "0.0.1",
  "description": "Api for RememberTheTask bot",
  "main": "./dist/main.js",
  "bin": "./dist/wwwrtt.js",
  "directories": {
    "doc": "doc",
    "example": "example"
  },
  "scripts": {
    "typedoc": "typedoc",
    "doc" : "npm run typedoc -- --options typedoc.json --out ./doc/ ./src/",

    "clean": "rimraf ./dist/*",
    "build": "tsc",
    "rebuild": "npm run clean && npm run lint && npm run build",
    "dev-launch": "npm run rebuild && npm start",

    "test": "npm run lint && npm run build",
    "lint": "tslint ./src/**/*.ts",

    "typings": "typings install",
    "start": "node ./dist/wwwrtt.js"
  },
  "keywords": [
    "api",
    "bot",
    "rememberthetask"
  ],
  "author": "Davide Polonio poloniodavide@gmail.com",
  "license": "MIT",
  "dependencies": {
    "express": "^4.13.1"
  },
  "devDependencies": {
    "dependency-check": "^2.5.1",
    "rimraf": "^2.5.2",
    "tslint": "^3.5.0",
    "typedoc": "^0.3.12",
    "typescript": "^1.8.7",
    "typings": "^0.7.9"
  }
}
